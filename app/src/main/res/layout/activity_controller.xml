<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="48dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:text="@string/controller_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/controller_thrust"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
            <SeekBar
                android:id="@+id/controller_vertical_stick"
                android:layout_width="272dp"
                android:layout_height="272dp"
                android:rotation="270"
                android:progress="50"
                android:clickable="false"
                android:progressTint="@color/colorSeekBar"/>
            <TextView
                android:id="@+id/controller_vertical_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/controller_value_default"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="384dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">
            <SeekBar
                android:id="@+id/controller_horizontal_stick"
                android:layout_width="384dp"
                android:layout_height="96dp"
                android:layout_centerVertical="true"
                android:progress="50"
                android:clickable="false"
                android:progressTint="@color/colorSeekBar"/>
            <ImageView
                android:id="@+id/controller_status"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_bluetooth_searching_white_48dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/controller_horizontal_stick"
                android:layout_centerHorizontal="true"
                android:text="@string/controller_direction"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
            <TextView
                android:id="@+id/controller_horizontal_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/controller_horizontal_stick"
                android:layout_centerHorizontal="true"
                android:text="@string/controller_value_default"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:text="@string/controller_signature"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
</LinearLayout>
